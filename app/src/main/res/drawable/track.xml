<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding android:bottom="22dp" android:left="22dp" android:right="22dp" android:top="22dp" />

            <corners android:radius="100dp" />

            <gradient android:angle="0" android:endColor="#9D11B5" android:startColor="#F1DAF4" android:type="linear" />
            <stroke android:width="1dp" android:color="#8c8c8c" />
            <size android:height="20dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">

            <padding android:bottom="22dp" android:left="22dp" android:right="22dp" android:top="22dp" />

            <corners android:radius="100dp" />
            <gradient android:angle="0" android:endColor="#820897" android:startColor="#E2B9EA" android:type="linear" />

            <stroke android:width="1dp" android:color="#8c8c8c" />
            <size android:height="20dp" />
        </shape>
    </item>
</selector>
